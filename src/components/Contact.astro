---
import { CenterTitle } from "./UI";
import { ContactForm } from "./Preact";

const contactHighlights = [
	{
		label: "Concierge Atelier",
		value: "+38 (044) 123 45 67",
		href: "tel:+380441234567",
	},
	{
		label: "Reservations",
		value: "reservations@thehotelkyiv.com",
		href: "mailto:reservations@thehotelkyiv.com",
	},
	{
		label: "Address",
		value: "5 Mykhaila Hrushevskoho St, Kyiv 01008",
		href: "https://maps.google.com/?q=5%20Mykhaila%20Hrushevskoho%20St",
	},
	{
		label: "Service Hours",
		value: "Concierge 24/7 · Dining 07:00–01:00",
	},
];
---

<section
    id="contact"
    class="w-full min-h-screen mb-16 lg:mb-[15em] px-6 py-4 pt-14 bg-background"
>
    <CenterTitle title="Plan Your Stay" color="primary" />

    <div class="w-full flex_center flex-col p-4 text-center gap-2">
        <h3 class="Fade_Up gradientText font-ubuntu text-[2rem] lg:text-[2.4rem]">
            Tell us how you dream of Kyiv.
        </h3>
        <p class="Fade_Up text-white/80">
            Share your arrival details, celebration plans, or bespoke requests—our hosts craft each
            itinerary personally.
        </p>
    </div>

    <div
        class="flex_center flex-col lg:flex-row w-full h-full gap-4 lg:gap-10 lg:px-20 pt-8 pb-16"
    >
        <div class="w-full lg:w-1/2 space-y-6">
            <div class="Fade_Up rounded-2xl border border-white/10 bg-white/5 p-6">
                <p class="text-sm uppercase tracking-[0.5em] text-white/60">
                    Guest Relations
                </p>
                <p class="text-white text-[1.2em] font-ubuntu mt-2">
                    A dedicated host replies within twenty minutes, confirming every curated detail.
                </p>
                <p class="text-white/70 text-sm mt-3">
                    We arrange airport transfers, cultural itineraries, private shopping, pet
                    amenities, and multilingual guides on request.
                </p>
            </div>

            <div class="grid gap-4">
                {contactHighlights.map((item) => (
                    <div class="Fade_Up border border-white/10 rounded-xl p-4 flex flex-col gap-1 bg-white/5">
                        <span class="text-xs uppercase tracking-[0.5em] text-white/60">
                            {item.label}
                        </span>
                        {item.href ? (
                            <a href={item.href} class="text-white text-lg font-semibold">
                                {item.value}
                            </a>
                        ) : (
                            <p class="text-white text-lg font-semibold">{item.value}</p>
                        )}
                    </div>
                ))}
            </div>
        </div>

        <ContactForm client:load />
    </div>
</section>


