---
import { SectionTitle } from "./UI";
import { ArrowUpRight } from "lucide-preact";
import { experiences } from "../data/experiences";
---

<section
    id="projects"
    class="w-full min-h-screen px-6 py-4 pt-14 bg-background"
>
    <SectionTitle title="Signature Experiences" color="secondary">
        <div
            class="Fade_Up relative w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:px-12 pb-6"
        >
            {
                experiences.map((experience) => (
                    <article
                        class="Project_Stagger relative overflow-hidden rounded-[0.65em] border border-white/10 bg-cardGradient opacity-0"
                    >
                        <div
                            class="absolute inset-0 opacity-60"
                            style={`background-image: url(${experience.image}); background-size: cover; background-position: center;`}
                        ></div>
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent"></div>
                        <div class="relative flex flex-col gap-4 p-6 min-h-[380px]">
                            <span class="text-xs uppercase tracking-[0.4em] text-white/70">
                                {experience.badge}
                            </span>
                            <h3 class="font-ubuntu text-[1.8em] leading-tight max-w-sm">
                                {experience.title}
                            </h3>
                            <p class="text-white/80 text-sm max-w-sm">
                                {experience.summary}
                            </p>
                            <ul class="grid gap-2 text-sm text-white/80">
                                {
                                    experience.highlights.slice(0, 2).map((highlight) => (
                                        <li class="flex gap-2 items-start">
                                            <span class="mt-1 h-1.5 w-1.5 rounded-full bg-white/80"></span>
                                            <span>{highlight.title}</span>
                                        </li>
                                    ))
                                }
                            </ul>
                            <a
                                href={`/projects/${experience.slug}`}
                                class="mt-auto inline-flex items-center gap-2 w-fit px-5 py-2 rounded-full border border-white/40 text-sm uppercase tracking-[0.3em] bg-black/30 hover:bg-black/50 transition"
                            >
                                <span>Discover</span>
                                <ArrowUpRight size={18} />
                            </a>
                        </div>
                    </article>
                ))
            }
        </div>
    </SectionTitle>
</section>
